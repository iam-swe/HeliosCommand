# HeliosCommand Environment Configuration
# Copy this file to .env and fill in your API credentials

# Google Maps API Key (Required)
# Get it from: https://console.cloud.google.com/
# Enable: Geocoding API, Places API
GOOGLE_API_KEY=your_google_api_key_here

# Gmail OAuth2 Bearer Token (Required for email functionality)
# Get it from: https://myaccount.google.com/
# Follow: https://developers.google.com/gmail/api/quickstart/python
GMAIL_BEARER_TOKEN=your_gmail_bearer_token_here

# Gmail User ID (Optional, defaults to "me")
# Usually your email address or "me" for authenticated user
GMAIL_USER_ID=me

# ── Flood Alert Workflow ──────────────────────────────────────

# Firecrawl API Key (Required for flood web scraper agent)
# Get it from: https://www.firecrawl.dev/
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Recipient email for flood alert notifications
USER_EMAIL=your_email@example.com

# Twilio API Credentials (Required for SMS alerts)
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_PHONE_NUMBER=+1234567890
RECIPIENT_PHONE_NUMBER=+0987654321
